    <!-- main header -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-8 mx-auto">

                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name..." autocomplete="off">
                        <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_realVal">0</span><sup>o</sup>C</p>
                            <p id="temp_status"></i></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!-- footer code -->
    {{>footer}}

    <script src="js/main.js"></script>
    <script>

        const getCurrentDay = ()=>{
            let weekday = new Array(7);
            weekday[0]= "Sunday";
            weekday[1]= "Monday";
            weekday[2]= "Tuesday";
            weekday[3]= "Wednesday";
            weekday[4]= "Thursday";
            weekday[5]= "Friday";
            weekday[6]= "Saturday";

            
            let currentTime = new Date();
            days = weekday[currentTime.getDay()];
            let day = document.getElementById('day');
            day.innerText = days;
        }

        const getCurrentDate = () => {
        let currentDate = new Date();
        const month = ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"];

        let day = currentDate.getDate();
        let mon = month[currentDate.getMonth()];
        //let mont = currentDate.getMonth() + 1; // Months are zero-based
        //let year = currentDate.getFullYear();

        let formattedDate = `${day < 10 ? '0' : ''}${day} ${mon < 10 ? '0' : ''}${mon}`;

        let todayDate = document.getElementById('today_date');
        todayDate.innerText = formattedDate;
    }

    getCurrentDate();
    getCurrentDay();
    </script>

